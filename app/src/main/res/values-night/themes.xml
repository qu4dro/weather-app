<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_400</item>
        <item name="colorPrimaryVariant">@color/orange_300</item>

        <item name="colorSecondary">@color/sub_black</item>
        <item name="colorSecondaryVariant">@color/middle_grey</item>


        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black_surface</item>
        <item name="colorError">@color/red_400</item>

        <item name="colorOnPrimary">@color/grey_light_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>

        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <!--Typography-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Weather.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Weather.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Weather.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Weather.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Weather.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Weather.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Weather.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Weather.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Weather.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Weather.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Weather.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Weather.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Weather.Overline</item>
    </style>
</resources>